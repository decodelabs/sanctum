{
    "name": "decodelabs/sanctum",
    "description": "Define and deploy Content Security Policies in your PHP application",
    "type": "library",
    "keywords": [ "csp", "content security policy", "policy", "http" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/archetype": "^0.3.8",
        "decodelabs/exceptional": "^0.5.3",
        "decodelabs/glitch-support": "^0.5.1",

        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Sanctum\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.3.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
